<!DOCTYPE html>
<html lang="en">
	{% 
    include "./partial/header.twig" with 
    {"title": "Mượn Sách",
      "css" : 
            [
                "/css/table.css",
                "https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css",
            ],
    } 
%}
<body>
    {% include "./partial/nav.twig" with {'user': user, "active": 2} %}

    <div class="container">
        <div>
            <h1 class="header text-center">Sách bạn đã mượn</h1>
        </div>

        <table id="borrow" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Sách</th>
                    <th>Ngày mượn</th>
                    <th>Ngày trả</th>
                </tr>
            </thead>
            {% for book in books %}
                <tr>
                    <td>{{ book.name }}</td>
                    <td>{{ book.borrow_at }}</td>
                    <td>{{ book.borrow_end }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>

    {% include "./partial/footer.twig" %}    
</body>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
             $('#borrow').DataTable();
        });
    </script>
</html>