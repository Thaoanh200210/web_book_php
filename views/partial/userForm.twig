<div class="container d-flex flex-column" style="margin-top: 80px; height: 523px; margin-bottom: 16px">
			<div class="rounded m-auto p-2" style="background-color: white;">

					<h1 class="text-center header">
						{{ name }}
					</h1>
					{% if message != "" %}
					<div class="message text-center w-100" >
							<span class="fs-5" style="color:red" >
							<i class="fa-sharp fa-solid fa-circle-xmark close-button"></i>
								{{message}}
							</span>
					</div>
					<script>
						$(".close-button").click(function() {
							$(".message").hide()
						})
					</script>
					{% endif %}

				<form action="{{action}}" method="POST" id="formSignIn" class="user-form d-flex flex-column flex-start rounded p-2">
					<div class="row">
						<div class="m-1 mb-4 col">
							<label class="fs-5 form-label bold" for="username">Tên đăng nhập:</label>
							<input id="username" class=" rounded form-control p-2" type="text" name="username" value="" placeholder="Nhập tên đăng nhập">
						</div>
						{% if name == "Đăng Ký" %}
						<div class="m-1 mb-4 col">
							<label class="fs-5 form-label" for="phone">Nhập số điện thoại:</label>
                            <input id="phone" class=" rounded form-control p-2" type="text" name="phone" value="" placeholder="Nhập số điện thoại">
						</div>
						{% endif %}
					</div>
					<div class="row">
						<div class="m-1 mb-4 col">
							<label class="fs-5 form-label" for="password">Mật khẩu:</label>
							<input id="password" class=" rounded form-control p-2" type="password" name="password" value="" placeholder="Nhập mật khẩu">
						</div>
						{% if name == "Đăng Ký" %}
						<div class="m-1 mb-4 col">
							<label class="fs-5 form-label" for="address">Nhập địa chỉ:</label>
                            <input id="address" class=" rounded form-control p-2" type="text" name="address" value="" placeholder="Nhập địa chỉ">
						</div>
						{% endif %}
					</div>
                    {% if name == "Đăng Ký" %}
					<div class="row">
                        <div class="m-1 mb-4 col">
                            <label class="fs-5 form-label" for="confirm_password">Nhập lại mật khẩu:</label>
                            <input id="confirm_password" class=" rounded form-control p-2" type="password" name="confirm_password" value="" placeholder="Nhập lại mật khẩu">
                        </div>
						<div class="m-1 mb-4 col">
							<label class="fs-5 form-label" for="idCard">Nhập số CCCD:</label>
							<input id="idCard" class=" rounded form-control p-2" type="text" name="idCard" value="" placeholder="Nhập số CCCD">
						</div>
					</div>
                    {% endif %}
                    
					<div class='d-flex flex-row	justify-content-between align-items-center'>
						<div style="margin-left: 7px">
                        {% if name == "Đăng Ký" %}
                            <a href="/login" style="color: #0d6efd; text-decoration: underline">Đăng Nhập?</a>
                        {% else %}
							<a href="/signup" style="color: #0d6efd; text-decoration: underline">Đăng Ký?</a>
                        {% endif %}
						</div>
						<div class="align-self-end">
							<button id="submitButton" type="submit" class="btn btn-primary">{{ name }}</button>
							<button type="reset" class="btn btn-secondary">Hủy</button>
						</div>
					</div>
				</form>
			</div>
		</div>